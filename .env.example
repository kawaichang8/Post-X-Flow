# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# AI API (use either Claude or Grok)
ANTHROPIC_API_KEY=your_anthropic_api_key
# GROK_API_KEY=your_grok_api_key  # Alternative to Claude

# Twitter/X API v2
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret
TWITTER_REDIRECT_URI=http://localhost:3000/api/auth/twitter/callback
# トレンド取得用: Developer Portal でアプリを「Project」に紐付け、その App の Keys and tokens から Bearer Token をコピーして設定（403 回避）
# TWITTER_BEARER_TOKEN=your_bearer_token

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Stripe (Monetization) - optional: omit to run as free-only
STRIPE_SECRET_KEY=sk_test_...your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_...your_webhook_secret
STRIPE_PRICE_ID=price_...your_pro_plan_price_id
# Set to false to hide upgrade UI and run as free-only
# NEXT_PUBLIC_UPGRADE_ENABLED=false

# Pro強制（開発・自己運用用）: 設定するとStripeなしでPro機能が使える
# FORCE_PRO=true
# NEXT_PUBLIC_FORCE_PRO=true
